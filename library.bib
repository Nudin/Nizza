@article{Nesvorny2004,
abstract = {A distinctive feature of the irregular moons of the giant planets is their orbital grouping. Previously, the prograde and retrograde groups of irregular moons at Jupiter were believed to be groups of fragments produced by the disruption of two large moons. More recently, we have shown that the retrograde group has not one but probably four or more parent bodies. We also found that fragments were launched from two of the four identified parent moons, producing two clusters of irregular moons with members of each group having similar orbits. Named the Ananke and Carme families, these two groups consist of seven and nine known member moons, respectively. The origin of this orbital clustering is unknown. Current rates of collisions among satellites in the retrograde group are too low to explain them. Collisions with cometary impactors are even less likely. Groups of irregular satellites with similar inclinations at Saturn are also yet to be explained. It is conceivable that the satellite families are remnants from early epochs of solar system formation when impactors were more numerous. In this paper we investigate the possibility that satellite families formed via collisions between large parent moons and stray planetesimals. We find that the Ananke and Carme families at Jupiter could indeed have been produced by this mechanism, unless the residual disk of planetesimals in heliocentric orbit was already severely depleted when the irregular satellites formed. Conversely, we find that formation of the Himalia group of prograde Jovian satellites by the same mechanism is unlikely unless a massive residual planetesimal disk was still present when the progenitor moon of the Himalia group was captured. We place constraints on the mass of the residual disk (1) when satellites were captured, and (2) when the Ananke and Carme families formed. These values depend sensitively on the assumed size-frequency distribution of planetesimals.},
author = {Nesvorn\'{y}, David and Beaug\'{e}, Cristian and Dones, Luke},
doi = {10.1086/382099},
issn = {0004-6256},
journal = {The Astronomical Journal},
language = {en},
month = mar,
number = {3},
pages = {1768--1783},
publisher = {IOP Publishing},
title = {{Collisional Origin of Families of Irregular Satellites}},
url = {http://iopscience.iop.org/1538-3881/127/3/1768/fulltext/},
volume = {127},
year = {2004}
}
@misc{Elliot2005,
abstract = {The Deep Ecliptic Survey (DES)-a search optimized for the discovery$\backslash$nof Kuiper belt objects (KBOs) with the Blanco and Mayall 4 m telescopes$\backslash$nat the Cerro Tololo Inter-American Observatory and Kitt Peak National$\backslash$nObservatory-has covered 550 deg2 from its inception in 1998 through$\backslash$nthe end of 2003. This survey has a mean 50\% sensitivity at VR magnitude$\backslash$n22.5. We report here the discoveries of 320 designated KBOs and Centaurs$\backslash$nfor the period 2000 March through 2003 December and describe improvements$\backslash$nto our discovery and recovery procedures. Our data and the data products$\backslash$nneeded to reproduce our analyses in this paper are available through$\backslash$nthe NOAO survey database. Here we present a dynamical classification$\backslash$nscheme, based on the behavior of orbital integrations over 10 Myr.$\backslash$nThe dynamical classes, in order of testing, are ``Resonant,'' ``Centaur,''$\backslash$n``Scattered-Near,'' ``Scattered-Extended,'' and ``Classical.'' (These$\backslash$nterms are capitalized when referring to our rigorous definitions.)$\backslash$nOf the 382 total designated KBOs discovered by the DES, a subset$\backslash$nof 196 objects have sufficiently accurate orbits for dynamical classification.$\backslash$nSummary information is given for an additional 240 undesignated objects$\backslash$nalso discovered by the DES from its inception through the end of$\backslash$n2003. The number of classified DES objects (uncorrected for observational$\backslash$nbias) are Classical, 96; Resonant, 54; Scattered-Near, 24; Scattered-Extended,$\backslash$n9; and Centaur, 13. We use subsets of the DES objects (which can$\backslash$nhave observational biases removed) and larger samples to perform$\backslash$ndynamical analyses on the Kuiper belt. The first of these is a determination$\backslash$nof the Kuiper belt plane (KBP), for which the Classical objects with$\backslash$ninclinations less than 5° from the mean orbit pole yield a pole at$\backslash$nR.A.=273.92d+/-0.62d and decl.=66.70d+/-0.20d (J2000), consistent$\backslash$nwith the invariable plane of the solar system. A general method for$\backslash$nremoving observational biases from the DES data set is presented$\backslash$nand used to find a provisional magnitude distribution and the distribution$\backslash$nof orbital inclinations relative to the KBP. A power-law model fit$\backslash$nto the cumulative magnitude distribution of all KBOs discovered by$\backslash$nthe DES in the VR filter yields an index of 0.86+/-0.10 (with the$\backslash$nefficiency parameters for the DES fitted simultaneously with the$\backslash$npopulation power law). With the DES sensitivity parameters fixed,$\backslash$nwe derive power-law indices of 0.74+/-0.05, 0.52+/-0.08, and 0.74+/-0.15,$\backslash$nrespectively, for the Classical, Resonant, and Scattered classes.$\backslash$nPlans for calibration of the DES detection efficiency function and$\backslash$nDES magnitudes are discussed. The inclination distribution confirms$\backslash$nthe presence of ``hot'' and ``cold'' populations; when the geometric$\backslash$nsini factor is removed from the inclination distribution function,$\backslash$nthe cold population shows a concentrated ``core'' with a full width$\backslash$nat half-maximum of approximately 4.6d, while the hot population appears$\backslash$nas a ``halo,'' extending beyond 30°. The inclination distribution$\backslash$nis used to infer the KBO distribution in the sky, as a function of$\backslash$nlatitude relative to the KBP. This inferred latitude distribution$\backslash$nis reasonably consistent with the latitude distribution derived from$\backslash$ndirect observation, but the agreement is not perfect. We find no$\backslash$nclear boundary between the Classical and Scattered classes either$\backslash$nin their orbital inclinations with respect to the KBP or in their$\backslash$npower-law indices in their respective magnitude distributions. This$\backslash$nleaves open the possibility that common processes have shaped the$\backslash$ndistribution of orbital parameters for the two classes.},
author = {Elliot, J. L. and Kern, S. D. and Clancy, K. B. and Gulbis, A. A. S. and Millis, R. L. and Buie, M. W. and Wasserman, L. H. and Chiang, E. I. and Jordan, A. B. and Trilling, D. E. and Meech, K. J.},
booktitle = {The Astronomical Journal},
doi = {10.1086/427395},
