journal = {The Astronomical Journal},
month = sep,
number = {3},
pages = {1364--1390},
title = {{The Size Distribution of Trans-Neptunian Bodies}},
url = {http://adsabs.harvard.edu/abs/2004AJ....128.1364B},
volume = {128},
year = {2004}
}
