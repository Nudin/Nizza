issn = {0004-6256},
journal = {The Astronomical Journal},
keywords = {planets and satellites: formation},
month = oct,
number = {4},
pages = {117},
title = {{Statistical study of the early solar system's instability with four, five, and six giant planets}},
url = {http://adsabs.harvard.edu/abs/2012AJ....144..117N http://arxiv.org/abs/1208.2957 http://stacks.iop.org/1538-3881/144/i=4/a=117?key=crossref.73afa500abeb77905372d0c407f0278b},
